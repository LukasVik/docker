# [run] Debian 11

ARG IMAGE="debian:sid-slim"

FROM $IMAGE AS mcode

RUN apt-get update -qq \
 && apt-get -y install --no-install-recommends \
    gcc \
    libc6-dev \
    libgnat-8 \
 && apt-get autoclean && apt-get clean && apt-get -y autoremove

#---

FROM mcode AS gcc

RUN apt-get install -y --no-install-recommends \
    zlib1g-dev \
 && apt-get autoclean && apt-get clean && apt-get -y autoremove

#---

FROM gcc AS llvm-8

RUN apt-get update -qq \
 && apt-get -y install --no-install-recommends \
    libllvm8 \
 && apt-get autoclean && apt-get clean && apt-get -y autoremove


