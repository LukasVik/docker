# [run] Ubuntu

ARG IMAGE="ubuntu:xenial"
ARG LLVM_VER="4.0"
ARG GNAT_VER="4.9"

#---

FROM $IMAGE AS mcode

ARG GNAT_VER

RUN apt-get update -qq \
 && DEBIAN_FRONTEND=noninteractive apt-get -y install --no-install-recommends \
    gcc \
    libc6-dev \
    libgnat-$GNAT_VER \
 && apt-get autoclean && apt-get clean && apt-get -y autoremove

#---

FROM mcode AS llvm

ARG LLVM_VER

RUN apt-get update -qq \
 && DEBIAN_FRONTEND=noninteractive apt-get -y install --no-install-recommends \
    libllvm-$LLVM_VER \
    zlib1g-dev \
 && apt-get autoclean && apt-get clean && apt-get -y autoremove
