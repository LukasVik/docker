ARG IMAGE="fedora:29"

# [run] Fedora 29

FROM $IMAGE AS mcode

RUN dnf --nodocs -y install libgnat gcc \
 && dnf clean all --enablerepo=\*

#---

FROM mcode as common

RUN dnf --nodocs -y install zlib-devel \
 && dnf clean all --enablerepo=\*

#---

FROM common AS llvm

RUN dnf --nodocs -y install llvm-libs \
 && dnf clean all --enablerepo=\*

#---

FROM common AS gcc

RUN dnf --nodocs -y install libstdc++ \
 && dnf clean all --enablerepo=\*
