# [build] Fedora 26

FROM fedora:26 AS mcode

RUN dnf --nodocs -y install gcc-gnat zlib-devel make \
  && dnf clean all --enablerepo=\*

#---

FROM mcode AS llvm

RUN dnf --nodocs -y install llvm-devel gcc-c++ clang \
    && dnf clean all --enablerepo=\*

#---

FROM mcode AS gcc-6.4.0

RUN dnf --nodocs -y install gcc gcc-c++ lbzip2 flex autogen texinfo dejagnu wget bzip2 \
  && dnf clean all
