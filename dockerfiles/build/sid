# [build] Debian 11

ARG IMAGE="debian:sid-slim"

FROM $IMAGE AS mcode

RUN apt-get update -qq \
 && apt-get -y install --no-install-recommends \
    ca-certificates \
    gcc \
    gnat \
    make \
    zlib1g-dev \
 && apt-get autoclean && apt-get clean && apt-get -y autoremove \
 && update-ca-certificates

#---

FROM mcode AS llvm-8

RUN apt-get update -qq \
 && apt-get -y install --no-install-recommends \
    clang-8 \
    llvm-8-dev \
 && apt-get autoclean && apt-get clean && apt-get -y autoremove

#---

FROM mcode AS gcc

RUN apt-get update -qq \
 && apt-get -y install --no-install-recommends \
    autogen \
    bzip2 \
    curl \
    dejagnu \
    flex \
    g++ \
    lbzip2 \
    texinfo \
    wget \
 && apt-get autoclean && apt-get clean && apt-get -y autoremove
