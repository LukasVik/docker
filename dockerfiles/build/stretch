# [build] Debian 9

FROM debian:stretch-slim AS mcode

RUN apt-get update -qq \
  && apt-get -y install --no-install-recommends \
    gnat gcc make zlib1g-dev \
  && apt-get autoclean && apt-get clean && apt-get -y autoremove

#---

FROM mcode AS mcode-gpl

#---

FROM debian:stretch-slim AS gcc-5.5.0

RUN apt-get update -qq \
  && apt-get -y install --no-install-recommends \
    curl gnat gcc g++ make zlib1g-dev lbzip2 flex autogen dejagnu texinfo ca-certificates wget bzip2 \
  && apt-get autoclean && apt-get clean && apt-get -y autoremove
