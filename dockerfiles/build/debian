# [build] Debian

ARG IMAGE="debian:stretch-slim"
ARG LLVM_VER="4.0"
ARG GNAT_VER="6"

#---

FROM $IMAGE AS mcode

ARG GNAT_VER

RUN apt-get update -qq \
 && DEBIAN_FRONTEND=noninteractive apt-get -y install --no-install-recommends \
    ca-certificates \
    gcc \
    gnat-$GNAT_VER \
    make \
    zlib1g-dev \
 && apt-get autoclean && apt-get clean && apt-get -y autoremove \
 && update-ca-certificates

#---

FROM mcode AS llvm

ARG LLVM_VER

RUN apt-get update -qq \
 && DEBIAN_FRONTEND=noninteractive apt-get -y install --no-install-recommends \
    clang-$LLVM_VER \
    llvm-$LLVM_VER-dev \
 && apt-get autoclean && apt-get clean && apt-get -y autoremove

#---

FROM mcode AS gcc

RUN apt-get update -qq \
 && DEBIAN_FRONTEND=noninteractive apt-get -y install --no-install-recommends \
    autogen \
    bzip2 \
    curl \
    dejagnu \
    flex \
    g++ \
    lbzip2 \
    texinfo \
    wget \
 && apt-get autoclean && apt-get clean && apt-get -y autoremove
