# [build] Fedora 29

FROM fedora:29 AS mcode

RUN dnf --nodocs -y install gcc-gnat zlib-devel make \
 && dnf clean all --enablerepo=\*

#---

FROM mcode AS llvm

RUN dnf --nodocs -y install gcc-c++ \
 && dnf clean all --enablerepo=\*

RUN dnf --nodocs -y install llvm-devel clang \
 && dnf clean all --enablerepo=\*

#---

FROM mcode AS gcc-8.2.1

RUN dnf --nodocs -y install gcc-c++ \
 && dnf clean all

RUN dnf --nodocs -y --allowerasing install gcc lbzip2 flex autogen texinfo dejagnu wget bzip2 \
 && dnf clean all
