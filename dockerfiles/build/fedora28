# [build] Fedora 28

FROM fedora:28 AS mcode

RUN dnf --nodocs -y install gcc-gnat zlib-devel make \
 && dnf clean all --enablerepo=\*

#---

FROM mcode as common

RUN dnf --nodocs -y install gcc-c++ \
 && dnf clean all --enablerepo=\*

#---

FROM common AS llvm

RUN dnf --nodocs -y install llvm-devel clang \
 && dnf clean all --enablerepo=\*

#---

FROM common AS gcc

RUN dnf --nodocs -y install gcc lbzip2 flex autogen texinfo dejagnu wget bzip2 \
 && dnf clean all
