os: linux
services: docker
language: minimal
install: skip

addons:
  apt:
    packages:
      - docker-ce

env: IMAGE="pkg"

before_script: git clone https://github.com/ghdl/ghdl && cd ghdl
script: ../pack.sh

deploy:
  - provider: script
    skip_cleanup: true
    script: ../deploy2dockerhub.sh "$IMAGE"
    on:
      repo: ghdl/docker
      branch: pack
      deploy:
  - provider: releases
    skip_cleanup: true
    api_key:
      secure: 
    file: "ghdl-*.tgz"
    file_glob: true
    on:
      repo: ghdl/docker
      branch: pack
      tags: true
