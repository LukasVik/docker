os: linux
services: docker
language: minimal
install: skip
addons:
  apt:
    packages:
      - pass

env: IMAGE="pkg"

before_script: git clone https://github.com/ghdl/ghdl && cd ghdl
script: ../pack.sh

deploy:
  - provider: script
    skip_cleanup: true
    script: ../deploy2dockerhub.sh "$IMAGE"
    on:
      repo: ghdl/docker
      branch: pack

